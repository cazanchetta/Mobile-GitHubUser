<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="User Login"
            android:layout_width="352dp"
            android:layout_height="23dp"
            android:id="@+id/textView" android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsuario"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            android:textSize="14sp"/>
    <Button
            android:text="Pesquisar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPesquisar"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsuario" app:layout_constraintEnd_toEndOf="@+id/etUsuario"
            app:layout_constraintStart_toStartOf="@+id/etUsuario" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="14sp"/>
    <ImageView
            android:layout_width="213dp"
            android:layout_height="272dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivUsuario"
            app:layout_constraintEnd_toEndOf="@+id/btPesquisar" app:layout_constraintStart_toStartOf="@+id/btPesquisar"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btPesquisar"/>
    <TextView
            android:text="Android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUsuario" android:textSize="24sp" app:layout_constraintEnd_toEndOf="@+id/ivUsuario"
            app:layout_constraintStart_toStartOf="@+id/ivUsuario" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUsuario"/>

</androidx.constraintlayout.widget.ConstraintLayout>